 <h2>Update Task</h2>
    <form method="POST" action="/product/update/{{_id}}?method=PUT" enctype="multipart/form-data">

        <label>Name</label>
        <input type="text" name="name" id="name" value="{{name}}" > <br><br>
        
        <label>Product Price</label>
        <input type="text" name="price" id="price" value="{{price}}"><br><br>
        
        <label>Product Description or Details</label>
        <textarea id="description" name="description">{{description}}</textarea><br><br>

        <label>Product Category</label>
        <select name="category">
            <option value="Electronics & Accessories" {{#if_eq category "Electronics & Accessories"}}selected {{/if_eq}}>Electronics & Accessories</option>
            <option value="Revamp your home"{{#if_eq category "Revamp your home"}}selected {{/if_eq}} >Revamp your home</option>
            <option value="Shop Valentine's Day gifts"{{#if_eq category "Shop Valentine's Day gifts"}}selected {{/if_eq}} >Shop Valentine's Day gifts</option>
            <option value="Fitness,Cardio and more"{{#if_eq category "Fitness,Cardio and more"}}selected {{/if_eq}}>Fitness,Cardio and more</option>
        </select>
        <br><br>

        <label>Product Quantity</label>
        <input type="number" name="quantity" id="quantity" value="{{quantity}}" > <br><br>

        <label>Bset Seller</label>
        <select name="bestSeller">
            <option value="Yes"{{#if_eq bestSeller Yes}} selected {{/if_eq}}>Yes</option>
            <option value="No"{{#if_eq bestSeller No}} selected {{/if_eq}}>No</option>
        </select>
        <br>
        <label >Upload Picture</label>
        <input type="file" name="productImg" id="addupload"value="{{productImg}}"> <br><br>

         <label>Status</label>
        <select name="status">
            <option value="open"{{#if_eq status open}} selected {{/if_eq}}>Open</option>
            <option value="hold"{{#if_eq status hold}} selected {{/if_eq}}>On Hold</option>
            <option value="completed"{{#if_eq status completed}} selected {{/if_eq}}>Completed</option>
        </select>
        <br><br>
        

        <input type="submit" value="Update Task">
    </form>
