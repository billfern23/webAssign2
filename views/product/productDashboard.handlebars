   
<h2>Product Dashboard</h2>
 
 <section class="product-container">
   

     <form method="POST" action="/product/search">
        <label>Search By</label>
        <select name="task-search">
                <option value="all">Name</option>
                <option value="open">Price</option>
                <option value="on-hold">Description</option>
                <option value="closed">Category</option>
                <option value="pending">Quantity</option>
                <option value="stuts">Status</option>
                <option value="low-priority">BestSeller</option>
                
        </select>
        <input type="submit" value="Search">
     </form> <br><br>

    <table border="1" style="text-align: center;">
        <thead>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>BestSeller</th>
                <th>Status</th>
                <th>ProductImgine</th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                   <td>
                        <a href="/product/edit{{this.id}}" class="product-name">{{this.name}}</a>
                   </td>
                   <td>
                       <span>{{this.price}}</span>
                      
                   </td>
                   <td>
                        <span>{{this.description}}</span>
                   </td>
                   <td>
                       <span>{{this.category}}</span>
                   </td>
                   <td>
                       <span>{{this.quantity}}</span>
                   </td>
                   <td>
                       <span>{{this.bestSeller}}</span>
                   </td>
                   <td>
                       <span>{{this.status}}</span>
                   </td>
                   <td>
                       <span>{{this.productImg}}</span>
                   </td>
                   
                   <td>
                        <a href="/product/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>

                {{else}}
                    <td colspan="5">
                        <p>No Products in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>
 
</section>